# Database Configuration (used by Docker Compose)
# These values are used when starting PostgreSQL with docker-compose
POSTGRES_DB=exam_prep_db
POSTGRES_USER=exam_prep_user
POSTGRES_PASSWORD=exam_prep_password
POSTGRES_PORT=5435
POSTGRES_HOST=localhost

# Backend Application Environment Variables
# The DATABASE_URL should match the values above. For containerized backend use the postgres service name
# (defined in backend/docker-compose.yml) instead of localhost when running inside Docker.
DATABASE_URL=postgresql://exam_prep_user:exam_prep_password@localhost:5435/exam_prep_db

# Flask environment: 'development' or 'production'
FLASK_ENV=development

# Flask SECRET_KEY used for session management. Replace with a strong secret in production.
# To generate: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_me_development_only

# JWT secret key (generate a strong random string)
# To generate: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
